--****************************************************--
  automaton observer
--****************************************************--
synclabs: ;
initially ObsStart;

loc ObsStart: while ckObs <= tmax wait {}
	when ckObs = tmax do {ckObs' = 0} goto ObsEnd;

loc ObsEnd: while ckObs <= 0 wait {}

end -- observer


