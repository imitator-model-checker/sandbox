var init : region;

init := True
	----------------------
	-- Initial locations
	----------------------
	& loc[node1]    = N1root_contention
	& loc[node2]    = N2root_contention
	& loc[wire12]   = W12empty
	& loc[wire21]   = W21empty
	& loc[s1o]      = S1oStart
	& loc[observer] = ObsStart

	----------------------
	-- Clocks
	----------------------
	& ckN1   = 0
	& ckN2   = 0
	& ckW12x = 0
	& ckW12y = 0
	& ckW21x = 0
	& ckW21y = 0
	& ckObs  = 0

	----------------------
	-- Given constraints
	----------------------
	& delay       >= 0 
	& rc_fast_min >= 0
	& rc_fast_max >= 0
	& rc_slow_max >= 0
	& rc_slow_min >= 0

	& rc_fast_min <= rc_fast_max
	& rc_slow_min <= rc_slow_max

