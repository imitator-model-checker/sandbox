var 	x1
		: clock;

	p1, p2
			: parameter;


--****************************************************--
--****************************************************--
-- AUTOMATA
--****************************************************--
--****************************************************--


--****************************************************--
  automaton automaton1
--****************************************************--

loc loc1: while x1 <= p2 wait {}
	when x1 >= p1 goto loc2;
	when p2 >= 8 goto locBad;

loc loc2: while x1 <= p1 wait {}
	when x1 >= 4 goto locBad;
	when p2 + p1 >= 10 goto locBad;

loc locBad: while True wait {}

end -- automaton1



--****************************************************--
--****************************************************--
-- ANALYSIS
--****************************************************--
--****************************************************--

init :=
	----------------------
	-- Initial locations
	----------------------
	  loc[automaton1] = loc1


	----------------------
	-- Clocks
	----------------------
	& x1 >= 0

	----------------------
	-- Constraints
	----------------------

;


property := unreachable loc[automaton1] = locBad;
