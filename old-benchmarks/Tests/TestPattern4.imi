var 	x1
		: clock;

	p1, p2
			: parameter;


--****************************************************--
--****************************************************--
-- AUTOMATA
--****************************************************--
--****************************************************--


--****************************************************--
  automaton automaton1
--****************************************************--

synclabs: a;

loc loc1: while x1 <= p1 wait {}
	when x1 = p1 sync a goto loc2;
	when p1 <= 3 goto loc2;

loc loc2: while True wait {}

end -- automaton1



--****************************************************--
--****************************************************--
-- ANALYSIS
--****************************************************--
--****************************************************--

init :=
	----------------------
	-- Initial locations
	----------------------
	  loc[automaton1] = loc1


	----------------------
	-- Clocks
	----------------------
	& x1 = 0

	----------------------
	-- Constraints
	----------------------

;


(* property := a1 within p1 + 2p2 + 2; *)
property := a within p2;
