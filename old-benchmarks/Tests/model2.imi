--****************************************************--
-- TEST OF INPUT PROGRAM
--****************************************************--
--****************************************************--

var
	p1, p2
		: parameter;
	x1, x2
		: clock;
	p3
		: parameter;

--****************************************************--
--****************************************************--
-- AUTOMATA
--****************************************************--
--****************************************************--


--****************************************************--
automaton automaton1
--****************************************************--
synclabs: ;

loc a1: while x1 <= p2 wait {}
	when x1 >= p1 goto a2;
	when x1 >= p3 goto a3;

loc a2: while True wait
loc a3: while True wait
	
end -- automaton1




init := True
	& loc[automaton1] = a1
	& x1 = 0
;
