(************************************************************
 *                         IMITATOR
 *
 * Example to reason on the AF-emptiness for U-PTA
 * Here, all runs reach lF for values of p small enough (p < 1)
 *
 * Author          : Etienne Andre
 * Created         : 2014/12/30
 * Last modified   : 2014/12/30
 * IMITATOR version: 2.6.2
 ************************************************************)

var 	x, y
		: clock;

	p
		: parameter;


(************************************************************)
  automaton PTA
(************************************************************)
synclabs: ;

loc l1: while x <= p wait {}
	when x <= p do {} goto lF;
	when y = 1 do {y' = 0} goto l2;

loc l2: while True wait {}

loc lF: while True wait {}

end (* PTA *)



(************************************************************)
(* Analysis *)
(************************************************************)

init := True
	(*------------------------------------------------------------
	   INITIAL LOCATION
	  ------------------------------------------------------------*)
	& loc[PTA] = l1

	(*------------------------------------------------------------
	   INITIAL CLOCKS
	  ------------------------------------------------------------*)
	& x = 0
	& y = 0

	(*------------------------------------------------------------
	   PARAMETER CONSTRAINTS
	  ------------------------------------------------------------*)
	& p >= 0
;

end
